<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>Symfony 3 CRUD</title>
        {% block stylesheets %}{% endblock %}
        <link rel="stylesheet"  href="{{ absolute_url(asset('css/bootstrap.min.css')) }}" />
        <link rel="stylesheet"  href="{{ absolute_url(asset('css/custom.css')) }}" />
        <script src="{{ absolute_url(asset('js/jquery.min.js')) }}"></script>
        <script src="{{ absolute_url(asset('js/custom.js')) }}"></script>
        <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/3.2/select2.css" type="text/css" rel="stylesheet" />
        <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/3.2/select2.min.js" type="text/javascript" ></script>
    </head>
    <body>

		<nav class="navbar navbar-expand-lg navbar-dark text-right bg-primary">
		  <a class="navbar-brand designation" href="#">
		  	{% if is_granted("ROLE_USER") %}
            Welcome, {{ app.user.username }}
            {% endif %}
		  </a>
		  <a class="navbar-brand" href="/logout">| Logout</a>
		  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
		    <span class="navbar-toggler-icon"></span>
		  </button>
		</nav>
		<br>
		<div class="container">
		{% for success_message in app.session.flashbag.get('message') %}
			<div class="alert alert-success">
				{{ success_message }}
			</div>
		{% endfor %}